{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}
{% block nav %}
    <li><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
    <li>
        <a class="nav-link" href="{{ path('app_register') }}">Register</a>
    </li>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-10 ml-md-auto">
            <div class="">
                <div class="card bg-light mb-3 mt-5" style="width: 800px;">
                    <div class="card-body">
    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>

    {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-lg btn-primary">Reset password</button>
    {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
